@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItem.Count > 0)
{
    <li>
        <a>
            <span class="glyphicon glyphicon-shopping-cart">
                <span id="cart-status">
                    @Model.ShoppingCart.ShoppingCartItem.Count
                </span>
            </span>
        </a>
    </li>
}